{
    "manifest_version": 2,
    "name": "DontBugMe",
    "version": "1.4",

    "description": "DontBugMe allows you to easily use credentials from BugMeNot.com on any page. This extension is not affiliated to BugMeNot.com in any way!",
    "homepage_url": "https://github.com/vantezzen/dontbugme",
    "icons": {
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png"
    },

    "permissions": [
        "activeTab",
        "tabs",
        "http://bugmenot.com/view/*"
    ],

    "browser_action": {
        "default_icon": "icons/icon-32.png",
        "default_title": "DontBugMe",
        "default_popup": "popup/popup.html"
    }
}